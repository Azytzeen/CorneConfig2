#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    macros {
        copy: copy {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(C)>;
            label = "COPY";
        };

        paste: paste {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LC(V)>;
            label = "PASTE";
        };
    };

    behaviors {
        HMRR: HMRR {
            compatible = "zmk,behavior-hold-tap";
            label = "HMRR";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <175>;
            hold-trigger-on-release;
            hold-trigger-key-positions = <0 24 12 25 13 1 2 14 26 27 15 3 16 28 4 5 17 17 36 38 29 37 39 40 41>;
        };

        HMRL: HMRL {
            compatible = "zmk,behavior-hold-tap";
            label = "HMRL";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <175>;
            hold-trigger-on-release;
            hold-trigger-key-positions = <36 38 37 39 40 41 30 18 6 7 31 19 32 19 20 8 9 33 21 22 10 34 35 23 11>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Base";
            bindings = <
&kp TAB     &kp Q  &kp W  &kp F               &kp P             &kp B               &kp J    &kp L              &kp U                &kp Y    &kp QUESTION  &kp BSPC
&kp ESCAPE  &kp A  &kp R  &HMRL LEFT_SHIFT S  &HMRL LEFT_ALT T  &kp G               &kp M    &HMRR RIGHT_ALT N  &HMRR RIGHT_SHIFT E  &kp I    &kp O         &kp SEMICOLON
&kp LSHFT   &kp Z  &kp X  &kp C               &kp D             &kp V               &kp K    &kp H              &kp COMMA            &kp DOT  &kp FSLH      &mt RIGHT_SHIFT SINGLE_QUOTE
                          &kp LCTRL           &lt 2 BACKSPACE   &mt LEFT_GUI DEL    &kp RET  &lt 1 SPACE        &kp RALT
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Lower";
            bindings = <
&kp TAB     &kp EXCLAMATION  &kp AT_SIGN    &kp POUND     &kp DOLLAR        &kp PERCENT          &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp UP_ARROW    &kp LEFT_BRACE  &kp RIGHT_BRACE  &kp BSPC
&bt BT_CLR  &kp CARET        &kp AMPERSAND  &kp ASTERISK  &kp COLON         &kp DOUBLE_QUOTES    &kp MINUS             &kp LEFT_ARROW         &kp DOWN_ARROW  &kp RIGHT       &trans           &trans
&kp LSHFT   &trans           &trans         &trans        &kp LEFT_BRACKET  &kp RIGHT_BRACKET    &kp EQUAL             &kp PLUS               &kp PIPE        &kp TILDE       &trans           &trans
                                            &kp LGUI      &trans            &kp DELETE           &kp RET               &trans                 &kp SPACE
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Raise";
            bindings = <
&kp TAB    &kp F1    &kp F2       &kp F3         &kp F4   &kp F5       &copy            &kp NUMBER_7    &kp NUMBER_8  &kp NUMBER_9  &kp C_VOLUME_UP    &kp BSPC
&kp LCTRL  &kp F6    &kp F7       &kp F8         &kp F9   &kp F10      &paste           &kp NUMBER_4    &kp NUMBER_5  &kp NUMBER_6  &kp C_VOLUME_DOWN  &kp PRINTSCREEN
&kp LSHFT  &kp HOME  &kp PAGE_UP  &kp PAGE_DOWN  &kp END  &kp F11      &kp C_AC_SEARCH  &kp NUMBER_1    &kp NUMBER_2  &kp NUMBER_3  &kp K_MUTE         &kp K_CALCULATOR
                                  &kp LGUI       &trans   &kp SPACE    &kp RET          &kp LEFT_SHIFT  &kp NUMBER_0
            >;
        };

        extra_1 { status = "reserved"; };

        extra_2 { status = "reserved"; };

        extra_3 { status = "reserved"; };
    };
};
